#!/bin/sh
# usage: PangenomicGraph
#  -g,--graph <arg>       name of graph
#  -l,--labelfile <arg>   tab-delimited file containing one sample<tab>label
#                         per line
#  -txt,--txtfile         load graph from <graph>.nodes.txt and
#                         <graph>.paths.txt
#  -v,--verbose           verbose output (false)
#  -vcf,--vcffile         load graph from <graph>.vcf.gz

GRAPH=$1
LABELSFILE=$2
FILECMD=$3
VCFFILE=$4

java -cp "build/install/fr/lib/*" -XX:+UseParallelGC org.ncgr.pangenomics.genotype.PangenomicGraph -v -g $GRAPH -l $LABELSFILE $FILECMD $VCFFILE
